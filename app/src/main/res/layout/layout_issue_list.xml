<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/tv_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Very much issue Very much issue Very much issue Very much issue Very much issue" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        tools:src="@drawable/ic_baseline_account_circle_24"
        android:layout_below="@id/tv_issue"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        tools:text="arijit-s04"
        android:layout_toEndOf="@id/user_avatar"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/user_avatar"
        android:layout_alignTop="@id/user_avatar"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/user_avatar"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>
